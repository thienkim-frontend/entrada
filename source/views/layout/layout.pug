include ../mixin/common
//-variable
block var
- var title = (typeof(title) === 'undefined' || title == "") ? "" : title;
- var scriptpage;
- var subPage = (typeof(subPage) === 'undefined' || subPage == "") ? "" : subPage;

doctype html
html(lang='vi')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='format-detection', content='telephone=no')
    meta(name='description', content='Wanderlust')
    meta(name='keywords', content='')
    meta(name='author', content='')
    link(rel="canonical", href='https://likipe.se/')
    link(rel='icon', href='./images/favicon.ico' type='image/x-icon')    
    title Wanderlust | #{title}
    link(href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500|Roboto+Condensed:400,700|Roboto:300,400,500|Shadows+Into+Light+Two|Poppins:500", rel="stylesheet")
    link(href='css/wordpress.css', rel='stylesheet', media='all')
    link(href='css/plugins.min.css', rel='stylesheet', media='all')
    link(href='css/style.css', rel='stylesheet', media='all')
    <!--[if lt IE 9]>
    script(src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js")
    script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
    <![endif]-->
  body(class=subPage)
    //- include header
    include ../includes/header
    //- .breadcrumb-wrapper
    //-     block breadcrumb
    // add the specific class for pages
    .wanderlust-content-wrapper
        block content
    //- include footer
    include ../includes/footer
    //- #back-top
        a(href="", title="Back to top"): i.fa.fa-chevron-up
            

    //-  Include all compiled plugins (below), or include individual files as needed
    //- script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js')
    script(src='js/plugins.min.js')
    //- script(src='//www.youtube.com/iframe_api')
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB0YTCoGxJR89aGxLLFAj2ix5S5NEPoRGE&callback=initMap")
    script(src='js/main.js')
